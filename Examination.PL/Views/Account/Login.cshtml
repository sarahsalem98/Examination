@model AccountLoginMV


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

</head>

<body>
    <div class="container my-container">
        <div class="row">
            <!-- Left Side -->
            <div class="col-md-7 p-5">
                <h2>Learn & Upgrade Your Skills on Your Schedule</h2>
                <img src="~/public/imgs/login.jpg" alt="Learning" class="img-fluid">
            </div>
            <!-- Right Side -->
            <div class="col-md-5 d-flex flex-column align-items-center justify-content-center">
                <h2 class="mb-6">Login To Your Account</h2>
                <div class="login-form-container p-4 w-100">
                    <form method="post">
                        <input type="hidden" id="returnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="mb-3">
                            <label class="mb-1" for="email">Email </label>
                            <input type="email" class="form-control" id="Email"  placeholder="Enter email" required>
                        </div>
                        <div class="mb-3">
                            <label class="mb-1" for="password">Password</label>
                            <input type="password" class="form-control" id="Password"  placeholder="Enter password" required>
                        </div>
                        <button  class="btn loginBtn w-100" onclick="Account.Login();return false">Login</button>
                    </form>
                </div>
            </div>

        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/Account.js"></script>
</body>
</html>

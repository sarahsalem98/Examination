@model InstructorMV

@* @{ *@
   
@*     Layout = "~/Areas/Instructor/Views/Shared/_Layout.cshtml"; *@

@* } *@

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

}

<button class="open-popup" onclick="openPopup()"> <i class="bi bi-gear"></i> Update Profile</button>

<!-- Include Update Form -->
@await Html.PartialAsync("UpdatePassword", new InstructorPasswordUpdateMV { UserId = Model.UserId ?? 0 })

<div class="container">
    <!-- Profile Card -->
    <div class="card profile-card">
        <div class="profile-header">
            <div class="prof-img-container">
                <img class="prof-img" src="~/imgs/Profile-PNG-Photo (1).png" alt="Instructor Photo" />
            </div>
            <h2>@Model.User?.FirstName @Model.User?.LastName</h2>
            <p><strong>Instructor ID:</strong> @Model.Id</p>
            <p>
                <strong>Courses:</strong> @Model.InstructorCourses?.Count() |
                <strong>Type:</strong> @(Model.IsExternal ? "External" : "Internal")
            </p>
        </div>
    </div>

    <!-- General Information Card -->
    <div class="card details-card">
        <h3><i class="fas fa-info-circle"></i> General Information</h3>
        <table>
            <tr>
                <th>Role</th>
                <td>Instructor</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.User?.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.User?.Phone</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@Model.User?.Age</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@(Model.User?.Status == 1 ? "Active" : "Inactive")</td>
            </tr>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/js/instructor/InstructorProfile.js"></script>
}

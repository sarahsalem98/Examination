@model StudentMV

@{
   
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/StudentProfle.css" asp-append-version="true" />
}

<button class="open-popup" onclick="openPopup()"> <i class="bi bi-gear"></i> Update Profile</button>

<!-- Popup Background (Overlay) -->
<div class="popup-overlay" id="popupOverlay" onclick="closePopup()"></div>

<!-- Popup Form -->
<div class="popup-form" id="popupForm">
    <span class="close-btn" onclick="closePopup()">&times;</span>
    <form onsubmit="submitForm(event)">
        <h3>Popup Form</h3>
        <label for="name">Name:</label>
        <input type="text" id="name" placeholder="Enter name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" placeholder="Enter email" required>

        <label for="tel">Phone:</label>
        <input type="tel" id="Phone" placeholder="Enter Phone" required>

        <button type="submit">Submit</button>

    </form>
</div>


<div class="container">
    <!-- Profile Card -->
    <div class="card profile-card">
        <div class="profile-header">
            <div class="prof-img-container">
                <img class="prof-img" src="~/images/Profile-PNG-Photo (1).png" alt="Student Photo">
            </div>
            <h2>@Model.User?.FirstName @Model.User?.LastName</h2>
            <p><strong>Student ID:</strong> @Model.Id</p>
            <p>
                <strong>Courses:</strong> @Model.StudentCourses?.Count() |
                <strong>Department:</strong> @Model.DepartmentBranch?.Department?.Name
            </p>
        </div>
    </div>


    <!-- General Information Card -->
    <div class="card details-card">
        <h3><i class="fas fa-info-circle"></i> General Information</h3>
        <table>
            <tr>
                <th>Role</th>
                <td>Student</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.User?.Email</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.User?.Phone</td>
            </tr>
            <tr>
                <th>Date of Birth</th>
                <td>@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "N/A")</td>
            </tr>
            <tr>
                <th>Enrollment Date</th>
                <td>@(Model.EnrollmentDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
            </tr>
            <tr>
                <th>Branch</th>
                <td>@Model.DepartmentBranch?.Branch?.Name</td>
            </tr>
            @* <tr> *@
            @*     <th>Track</th> *@
            @*     <td>@(Enum.GetName(typeof(TrackType), Model.TrackType) ?? "N/A")</td> *@
            @* </tr> *@
        </table>
    </div>


    <div class="grades-card-container mt-3">
        <div class="card grades-card">
            <h3><i class="fas fa-book"></i> Courses & Grades</h3>

            @if (Model.StudentCourses != null && Model.StudentCourses.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Course</th>
                            <th>Final Grade (%)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.StudentCourses)
                        {
                            <tr>
                                <td>@course.CourseName</td>
                                <td>@(course.FinalGradePercent.HasValue ? $"{course.FinalGradePercent}%" : "N/A")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No courses available.</p>
            }
        </div>
    </div>

